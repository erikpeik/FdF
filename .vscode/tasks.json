{
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-Ilibft/includes",
				"-Llibft",
				"-lft",
				"-I/usr/local/include",
				"-L/usr/local/lib",
				"-lmlx",
				"-framework",
				"OpenGL",
				"-framework",
				"AppKit",
				"${file}",
				"${fileDirname}/draw_line.c",
				"${fileDirname}/ft_mlx_pixel_put.c",
				"${fileDirname}/hook_key.c",
				"${fileDirname}/free_arrays.c",
				"${fileDirname}/read_values.c",
				"-o",
				"${fileDirname}/fdf"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger."
		}
	],
	"version": "2.0.0"
}
